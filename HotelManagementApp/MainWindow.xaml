<Window x:Class="HotelManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:HotelManagementApp"
        PresentationOptions:Freeze="True"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:uc="clr-namespace:HotelManagementApp.UserControlUI"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        ResizeMode="NoResize"
        WindowStyle="None"
        FontFamily="{DynamicResource MaterialDesignFont}"
        DataContext="{StaticResource MainVm}"
        Name="MainMenuWindow"
        Title="Hotel Management Application"
        WindowStartupLocation="CenterScreen"
        Width="1300"
        Height="700"
        >
    <Window.Background>

        <ImageBrush ImageSource="Images/background.jpg" />

    </Window.Background>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedWindowCommand}"
                                   CommandParameter="{Binding ElementName=MainMenuWindow}">
            </i:InvokeCommandAction>
        </i:EventTrigger>
            <i:EventTrigger EventName="Closing">
                <i:InvokeCommandAction Command="{Binding ExitApplicationCommand}" />
            </i:EventTrigger>
    </i:Interaction.Triggers>
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=MainWindow}"></uc:ControlBarUC>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="99*" />
                <ColumnDefinition Width="101*" />
            </Grid.ColumnDefinitions>
            <TabControl Name="Tab"
                        Grid.ColumnSpan="2"
                        Margin="0,0,0,0.2"
                        materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        SnapsToDevicePixels="True"
                        Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                        TabStripPlacement="Left">
                <!--SelectionChanged="TabControl_SelectionChanged"-->

                <TabItem>
                    <TabItem.Header>

                        <StackPanel Width="auto"
                                    Height="auto">
                            <materialDesign:PackIcon Width="30"
                                                     Height="30"
                                                     HorizontalAlignment="Center"
                                                     Kind="ViewDashboard" />
                            <TextBlock HorizontalAlignment="Center"
                                       Text="Main" />
                        </StackPanel>
                    </TabItem.Header>
                    <!--  MainUI start here  -->
                    <Grid>
                        <Grid Name="MainUI">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="250" />
                                <RowDefinition Height="141*" />
                                <RowDefinition Height="277*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="1.5*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <materialDesign:Card Margin="25"
                                                     Padding="8"
                                                     materialDesign:ShadowAssist.ShadowDepth="Depth5"
                                                     Foreground="{x:Null}">

                                        <materialDesign:Card.Background>
                                            <LinearGradientBrush StartPoint="0.5,0"
                                                             EndPoint="0.5,1">
                                                <GradientStop Offset="1"
                                                          Color="#FF7D27FF" />
                                                <GradientStop Color="#FFBB2086" />
                                            </LinearGradientBrush>
                                        </materialDesign:Card.Background>
                                    </materialDesign:Card>
                                    <Label x:Name="label_money"
                                       Width="93"
                                       Height="64"
                                       Margin="0,147,0,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       Content="">
                                        <Label.Background>
                                            <ImageBrush ImageSource="Images/money.png"
                                                    Stretch="Uniform" />
                                        </Label.Background>
                                    </Label>
                                    <Label x:Name="label_income"
                                       Width="300"
                                       Height="39"
                                       Margin="0,39,0,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       HorizontalContentAlignment="Center"
                                       Content="{Binding lblDateFilter}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#DDF9F9F9" />
                                    <Label x:Name="income"
                                       Width="297"
                                       Height="31"
                                       Margin="28,95,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       HorizontalContentAlignment="Center"
                                       VerticalContentAlignment="Center"
                                       FontSize="22"
                                       FontWeight="Bold"
                                        Content="{Binding SelectedDateRevenue, StringFormat=C0, ConverterCulture=vi-VN}"
                                       Foreground="#DDF9F9F9" />

                                </Grid>
                                <Grid Grid.Column="1">
                                    <materialDesign:Card Margin="25"
                                                     Padding="8"
                                                     materialDesign:ShadowAssist.ShadowDepth="Depth5"
                                                     Foreground="{x:Null}">

                                        <materialDesign:Card.Background>
                                            <LinearGradientBrush StartPoint="0.5,0"
                                                             EndPoint="0.5,1">
                                                <GradientStop Offset="1"
                                                          Color="#FF016CFD" />
                                                <GradientStop Color="#FF00E4FF" />
                                            </LinearGradientBrush>
                                        </materialDesign:Card.Background>

                                    </materialDesign:Card>
                                    <Label x:Name="label_guesttext"
                                       Width="299"
                                       Height="39"
                                       Margin="27,39,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       HorizontalContentAlignment="Center"
                                       Content="ALL INCOME"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#DDF9F9F9" />
                                    <Label x:Name="label_guest"
                                       Width="93"
                                       Height="64"
                                       Margin="0,149,0,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       Content="">
                                        <Label.Background>
                                            <ImageBrush ImageSource="Images/dollar.png"
                                                    Stretch="Uniform" />
                                        </Label.Background>
                                    </Label>
                                    <Label x:Name="guest"
                                       Width="297"
                                       Height="33"
                                       Margin="29,94,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       HorizontalContentAlignment="Center"
                                       FontSize="22"
                                       FontWeight="Bold"
                                        Content="{Binding Alltimerevenue, StringFormat=C0, ConverterCulture=vi-VN}"
                                       Foreground="#DDF9F9F9" />
                                </Grid>
                                <Grid Grid.Column="2">
                                    <materialDesign:Card Margin="25,25,25,25"
                                                     Padding="8"
                                                     materialDesign:ShadowAssist.ShadowDepth="Depth5"
                                                     Foreground="{x:Null}"
                                                     Grid.ColumnSpan="2">

                                        <materialDesign:Card.Background>
                                            <LinearGradientBrush StartPoint="0.5,0"
                                                             EndPoint="0.5,1">
                                                <GradientStop Color="#FFF51C40" />
                                                <GradientStop Offset="1"
                                                          Color="#FFD89B65" />
                                            </LinearGradientBrush>
                                        </materialDesign:Card.Background>
                                    </materialDesign:Card>
                                    <TextBlock  Text="{Binding bestSeller.ID, StringFormat='Mã {0}'}"
                                           Margin="56,80,360,140"
                                       FontSize="22"
                                       Foreground="#DDF9F9F9"
                                       RenderTransformOrigin="0.5,0.5">
                                    </TextBlock>
                                    <Label Width="326"
                                       Height="33"
                                       Margin="175,78,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       HorizontalContentAlignment="Left"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#DDF9F9F9"
                                       RenderTransformOrigin="0.5,0.5"
                                        Content="{Binding bestSeller.Name}"/>
                                    <Label Content="{Binding bestSeller.Type}" 
                                           Margin="325,157,33,53"
                                       FontSize="22"
                                       Foreground="#DDF9F9F9"
                                       RenderTransformOrigin="0.5,0.5"/>
                                    <TextBlock 
                                           Margin="175,157,206,53"
                                       FontSize="22"
                                       Foreground="#DDF9F9F9"
                                       RenderTransformOrigin="0.5,0.5">
                                        <Run Text="{Binding bestSellerQuantity}"/> <Run Text="{Binding bestSeller.Unit}" />
                                    </TextBlock>
                                    <TextBlock Text="{Binding bestSeller.Price, StringFormat=C0, ConverterCulture=vi-VN}" 
                                           Margin="175,116,33,96"
                                           FontWeight="DemiBold"
                                       FontSize="22"
                                       Foreground="#DDF9F9F9"
                                       RenderTransformOrigin="0.5,0.5"/>
                                    <Label
                                       Width="93"
                                       Height="64"
                                       Margin="40,145,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Content=""
                                       Grid.ColumnSpan="2">
                                        <Label.Background>
                                            <ImageBrush ImageSource="Images/tags.png"
                                                    Stretch="Uniform" />
                                        </Label.Background>
                                    </Label>
                                    <Label x:Name="label_Copy4"
                                       Width="342"
                                       Height="39"
                                       Margin="0,39,0,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       HorizontalContentAlignment="Center"
                                       Content="MOST POPULAR"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#DDF9F9F9"
                                       Grid.Column="1" />
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="1" Grid.RowSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="74*" />
                                    <RowDefinition Height="133*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="460" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.RowSpan="2"
                                  Grid.Column="0"
                                  Margin="25,25,25,25">
                                    <TextBlock Text="{Binding statFilterError}"
                                               Style="{StaticResource MaterialDesignHelperTextBlock}"
                                               Foreground="Red"/>
                                    <materialDesign:Card Padding="8"
                                                     materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                                     Foreground="{x:Null}"
                                                     UniformCornerRadius="10" Margin="263,10,-117,-10" />
                                    <Wpf:PieChart
                                        Margin="263,30,-117,10"
                                        Hoverable="True"
                                        InnerRadius="5"
                                        FontSize="12" 
                                        LegendLocation="Bottom"
                                        Series="{Binding SeriesCollectionPie}" 
                                        StartingRotationAngle="0"/>
                                    <Button Width="100"
                                            Margin="142,324,168,12"
                                            Command="{Binding RefreshStatictics}"
                                            Content="REFRESH"/>
                                    <ComboBox  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                               materialDesign:HintAssist.Hint="Filter by"
                                               Margin="16,13,234,0"
                                               VerticalAlignment="Top"
                                               Text="{Binding cbxFilterBy, UpdateSourceTrigger=PropertyChanged}"
                                               SelectedValue="{Binding cbxSelectedValue}">
                                        <ComboBoxItem Content="Date"/>
                                        <ComboBoxItem Content="Month"/>
                                        <ComboBoxItem Content="Year"/>
                                    </ComboBox>
                                    <StackPanel Orientation="Vertical" Margin="2,54,168,0">
                                        <Calendar Visibility="{Binding isDate}"
                                              VerticalAlignment="Top"
                                              materialDesign:HintAssist.Hint="Filter"
                                              Style="{StaticResource MaterialDesignCalendarPortraitBase}"
                                              SelectedDate="{Binding caSelectedDate, UpdateSourceTrigger=PropertyChanged}"
                                              DisplayDateStart="{Binding Oldest}" DisplayDateEnd="{x:Static sys:DateTime.Today}" >
                                        </Calendar>
                                        <StackPanel Margin="16, 4,64,0" Visibility="{Binding isNotDate}">
                                            <ComboBox ItemsSource="{Binding months}" Text="{Binding selectedMonth}" Visibility="{Binding isMonth}"/>
                                            <ComboBox ItemsSource="{Binding years}" Text="{Binding selectedYear}" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <TextBlock Text="{Binding tbkStatError, UpdateSourceTrigger=PropertyChanged}" 
                                               Margin="263,13,-117,318"
                                               Foreground="Red"
                                               TextWrapping="WrapWithOverflow"
                                               TextAlignment="Center"/>
                                </Grid>
                                <Grid Grid.RowSpan="2"
                                  Grid.Column="1"
                                  Margin="113,25,25,25">
                                    <materialDesign:Card Padding="8"
                                                     materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                                     Foreground="{x:Null}"
                                                     UniformCornerRadius="10" Margin="0,8,0,-8" />
                                    <Wpf:CartesianChart LegendLocation="Right" Series="{Binding SeriesCollectionCart}" Margin="0,11,0,-8">
                                        <Wpf:CartesianChart.AxisY>
                                            <Wpf:Axis Title="Income" LabelFormatter="{Binding YFormatter}" MinValue="0"/>
                                        </Wpf:CartesianChart.AxisY>
                                        <Wpf:CartesianChart.AxisX>
                                            <Wpf:Axis Title="Quarter" Labels="{Binding XFormatter}" 
                                                      Position="LeftBottom" MinValue="0"/>
                                        </Wpf:CartesianChart.AxisX>
                                    </Wpf:CartesianChart>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                </TabItem>
                <TabItem DataContext="{StaticResource OrderVm}">


                    <TabItem.Header>

                        <StackPanel Width="auto"
                                    Height="auto">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                    <!--<i:InvokeCommandAction Command="{Binding Path=ReloadCommand}"/>-->
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <materialDesign:PackIcon Width="30"
                                                     Height="30"
                                                     HorizontalAlignment="Center"
                                                     Kind="RoomService" />
                            <TextBlock HorizontalAlignment="Center"
                                       Text="Service" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>


                        <!--  Main  -->

                        <Grid Grid.Row="0">



                            <!--  Main  -->




                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2.5*" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--  Danh sách hàng hóa  -->
                            <Grid Grid.Column="0"
                                  Margin="10">

                                <!--  Filter và search  -->

                                <TabControl Grid.RowSpan="2"
                                            Margin="0,0,-0.2,-0.4"
                                            materialDesign:ColorZoneAssist.Mode="PrimaryLight"
                                            Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                                            TabStripPlacement="Top">
                                    <!--SelectionChanged="TabControl_SelectionChanged_1"-->

                                    <!--  Nước uống  -->

                                    <TabItem Width="840">
                                        <TabItem.Header>
                                            <StackPanel Width="auto"
                                                        Height="auto">

                                                <TextBlock HorizontalAlignment="Center"
                                                           FontSize="30"
                                                           FontWeight="bold"
                                                           Text="MENU" />
                                            </StackPanel>
                                        </TabItem.Header>
                                        <Grid Margin="0,10,0,0" Background="GhostWhite">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="12,0,0,0">
                                                <Border
                                                Margin="15,0,0,0"
                                                Height="40"
                                                Width="115"
                                                CornerRadius="16"
                                                Background="#6C63FF"
                                                >
                                                    <ComboBox
                                                    Style="{StaticResource MaterialDesignFilledComboBox}"
                                                    materialDesign:TextFieldAssist.TextBoxViewMargin="2,-11,-10,0"
                                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="14"
                                                    materialDesign:HintAssist.Hint="Price"
                                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                    BorderThickness="0"
                                                    materialDesign:HintAssist.Foreground="White"
                                                    Background="GhostWhite"
                                                    Height="35"
                                                    FontSize="14"
                                                    SelectedIndex="0"
                                                    Text="{Binding Sort, UpdateSourceTrigger=PropertyChanged}"
                                                    Width="110">
                                                        <ComboBoxItem></ComboBoxItem>
                                                        <ComboBoxItem>Ascending</ComboBoxItem>
                                                        <ComboBoxItem>Descending</ComboBoxItem>
                                                    </ComboBox>
                                                </Border>
                                                <Border
                                                Margin="15,0,0,0"
                                                Height="40"
                                                Width="115"
                                                CornerRadius="16"
                                                Background="#6C63FF"
                                                >
                                                    <ComboBox
                                                    Style="{StaticResource MaterialDesignFilledComboBox}"
                                                    materialDesign:TextFieldAssist.TextBoxViewMargin="2,-11,-10,0"
                                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="14"
                                                    materialDesign:HintAssist.Hint="Type"
                                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                    BorderThickness="0"
                                                    materialDesign:HintAssist.Foreground="White"
                                                    Background="GhostWhite"
                                                    Height="35"
                                                    FontSize="14"
                                                    Text="{Binding TypeFilter, UpdateSourceTrigger=PropertyChanged}"
                                                    Width="110">
                                                        <ComboBoxItem></ComboBoxItem>
                                                        <ComboBoxItem>Food</ComboBoxItem>
                                                        <ComboBoxItem>Service</ComboBoxItem>
                                                    </ComboBox>
                                                </Border>
                                                <TextBox
                                                    Width="520"
                                                    Height="40"
                                                    Margin="15,0,0,0"
                                                    BorderBrush="#6C63FF"
                                                    Foreground="Black"
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    materialDesign:HintAssist.Hint="Find"
                                                    materialDesign:HintAssist.FontFamily="{StaticResource MaterialDesignFont}"
                                                    materialDesign:HintAssist.Foreground="White"
                                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,7,0,0"
                                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="15"
                                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                    BorderThickness="3"
                                                    VerticalAlignment="Center"
                                                    CaretBrush="Gray"
                                                    Text="{Binding SearchString, UpdateSourceTrigger=PropertyChanged}"
                                                    />
                                            </StackPanel>

                                            <ScrollViewer Grid.Row="1" CanContentScroll="True" VerticalScrollBarVisibility="Auto">
                                            
                                            <ListBox ItemsSource="{Binding FilteredList,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                                     SelectedItem="{Binding Path=SelectedItem, Mode=TwoWay}"
                                                     x:Name="lbFAndS" Margin="12" Height="500" Width="Auto">
                                                <ListBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ListBox.ItemsPanel>

                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>

                                                            <Border Height="210" Width="180" Background="White"
                                                                BorderThickness="1" BorderBrush="Bisque"
                                                                CornerRadius="4" Padding="8" Cursor="Hand">
                                                                <Border.Effect>
                                                                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#FFD8AFF4" />
                                                                </Border.Effect>
                                                                <StackPanel>
                                                                    <Image MaxWidth="180" MaxHeight="100" MinHeight="100" Stretch="Uniform" 
                                                                       Source="{Binding ImageData, Converter={StaticResource PathConverter}, UpdateSourceTrigger=PropertyChanged}">
                                                                    </Image>
                                                                    <TextBlock Height="22" Foreground="#6C63FF" FontWeight="Bold" FontSize="14" Margin="0,8,0,0">
                                                                            <Run Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                                                                    </TextBlock>
                                                                    <TextBlock Height="20" Foreground="Black" FontWeight="DemiBold">
                                                                            <Run Text="Price:"/>   
                                                                            <Run Text="{Binding Price, UpdateSourceTrigger=PropertyChanged, StringFormat=C0, ConverterCulture=vi-VN}" Foreground="#6C63FF"/>
                                                                    </TextBlock>
                                                                    <TextBlock Height="20" Foreground="Black">
                                                                            <Run Text="Unit:"/>   
                                                                            <Run Text="{Binding Unit, UpdateSourceTrigger=PropertyChanged}"/>
                                                                    </TextBlock>
                                                                    <TextBlock Height="20" Foreground="Black">
                                                                            <Run Text="Type:"/>   
                                                                            <Run Text="{Binding Type, UpdateSourceTrigger=PropertyChanged}"/>
                                                                    </TextBlock>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                            </ListBox>
                                        </ScrollViewer>
                                        </Grid>
                                    </TabItem>

                                    <!--  Đặt hàng  -->
                                </TabControl>
                            </Grid>
                            <Grid Grid.Column="1">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8*" />
                                    <RowDefinition Height="1.2*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1.5*" />

                                </Grid.RowDefinitions>
                                <!--  Tên sân  -->
                                <Grid Grid.Row="1"
                                      Grid.RowSpan="2"
                                      Height="58"
                                      Margin="0,0,0,20"
                                      VerticalAlignment="Center">
                                    <TextBox Margin="4,0,10,0"
                                              Height="50"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                              Text="{Binding RoomNum, UpdateSourceTrigger=PropertyChanged}"
                                              materialDesign:HintAssist.Hint="Room Num">
                                        </TextBox>


                                </Grid>
                                <Grid Grid.Row="0">
                                    <Border CornerRadius="30">
                                        <Grid Margin="9,12,9,9">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="8*" />
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="6*" />
                                                    <ColumnDefinition Width="4*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0">
                                                    <TextBlock Margin="20,10,10,10"
                                                               VerticalAlignment="Center"
                                                               FontSize="20"
                                                               FontWeight="DemiBold"
                                                               Text="Current Order" />
                                                </Grid>
                                                <Grid Grid.Column="1">

                                                    <Button Width="100"
                                                            Background="Red"
                                                            BorderThickness="0"
                                                            Command="{Binding ClearAllCommand}"
                                                            Content="Clear all"
                                                            SnapsToDevicePixels="True" />
                                                </Grid>
                                            </Grid>
                                            <Grid Margin="0,52,0,0" Grid.RowSpan="2">
                                                <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Auto" Background="GhostWhite" Margin="0,0,4,0">

                                                    <ListBox ItemsSource="{Binding PendingOrdersList, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                                     SelectedItem="{Binding Path=SelectedOrder, Mode=TwoWay}" Height="500" Width="auto">

                                                        <ListBox.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel IsItemsHost="True" Orientation="Vertical"/>
                                                            </ItemsPanelTemplate>
                                                        </ListBox.ItemsPanel>

                                                        <ListBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border MaxHeight="150" Width="300" Grid.Row="1" Background="White" BorderThickness="1" BorderBrush="Bisque" Cursor="Hand" CornerRadius="4">
                                                                    <Border.Effect>
                                                                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#FFD8AFF4" />
                                                                    </Border.Effect>
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="3*"/>
                                                                            <ColumnDefinition Width="4*"/>
                                                                            <ColumnDefinition/>
                                                                            <ColumnDefinition/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Image Grid.Column="0" Stretch="UniformToFill" Width="80" Height="80" VerticalAlignment="Center" Source="{Binding FoodsAndService.ImageData, Converter={StaticResource PathConverter}, UpdateSourceTrigger=PropertyChanged}">
                                                                        </Image>
                                                                        <StackPanel Grid.Column="1">
                                                                            <TextBlock Height="24" Foreground="#6C63FF" FontWeight="Bold" FontSize="15" Margin="0,8,0,0">
                                                                                <Run Text="{Binding FoodsAndService.Name, UpdateSourceTrigger=PropertyChanged}"/>
                                                                            </TextBlock>
                                                                            <TextBlock Foreground="Black" Margin="0,6,0,0">
                                                                                <Run Text="Price:"/>   
                                                                                <Run Text="{Binding FoodsAndService.Price, UpdateSourceTrigger=PropertyChanged, StringFormat=C0, ConverterCulture=vi-VN}" Foreground="#6C63FF"/>
                                                                            </TextBlock>
                                                                            <TextBlock Height="22" Foreground="Black">
                                                                                <Run Text="Total:"/>   
                                                                                <Run Text="{Binding TotalPrice, UpdateSourceTrigger=PropertyChanged, StringFormat=C0, ConverterCulture=vi-VN}" Foreground="#6C63FF" FontWeight="DemiBold" FontSize="13"/>
                                                                            </TextBlock>
                                                                        </StackPanel>
                                                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
